<table class="table table-sm table-bordered">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">User Email</th>
    <th scope="col">Action</th>
  </tr>
  </thead>
  <tbody>
  <% @friends.each_with_index do |friend, index| %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td><%= link_to friend.email, profile_path(friend) %></td>
      <td><%= link_to 'Unsubscribe', unsubscribe_profile_path(friend) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

